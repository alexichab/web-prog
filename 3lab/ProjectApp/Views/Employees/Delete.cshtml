@model ProjectApp.Models.Employee

<h1>Удалить сотрудника</h1>

<h3>Вы уверены, что хотите удалить этого сотрудника?</h3>

<div>
    <h4>Сотрудник</h4>
    <dl class="row">
        <dt class="col-sm-2">Имя</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Фамилия</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" asp-action="Index">Назад</a>
</form>
