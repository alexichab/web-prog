@model ProjectApp.Models.Employee

<h1>Информация о сотруднике</h1>

<div>
    <h4>Сотрудник</h4>
    <dl class="row">
        <dt class="col-sm-2">Имя</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Фамилия</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Отчество</dt>
        <dd class="col-sm-10">@Model.MiddleName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<a class="btn btn-secondary" asp-action="Index">Назад к списку</a>
<a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Удалить</a>
