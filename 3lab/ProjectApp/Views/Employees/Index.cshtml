@model IEnumerable<ProjectApp.Models.Employee>

<h1>Сотрудники</h1>

<a class="btn btn-primary" asp-action="Create">Добавить нового сотрудника</a>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@employee.Id">Детали</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@employee.Id">Редактировать</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@employee.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
