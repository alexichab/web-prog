@model ProjectApp.Models.Project

@{
    ViewData["Title"] = "Удалить проект";
}

<h1>Delete Project</h1>

<h3>Вы уверены, что хотите удалить проект "@Model.Name"</h3>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Компания заказчик</dt>
        <dd class="col-sm-10">@Model.CustomerCompany</dd>

        <dt class="col-sm-2">Компания-исполнитель</dt>
        <dd class="col-sm-10">@Model.PerformerCompany</dd>

        <dt class="col-sm-2">Приоритет</dt>
        <dd class="col-sm-10">@Model.Priority</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">УДАЛИТЬ</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

<a href="@Url.Action("Index", "Projects")" class="btn btn-secondary">Назад</a>
