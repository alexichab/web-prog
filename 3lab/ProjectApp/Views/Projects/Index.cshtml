@model IEnumerable<ProjectApp.Models.Project>

@{
    ViewData["Title"] = "Projects List";
}

<h1>Проекты</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новый проект</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Компания-заказчик</th>
            <th>Компания-исполнитель</th>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Приоритет</th>
            <th>Руководитель</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.CustomerCompany</td>
                <td>@project.PerformerCompany</td>
                <td>@project.StartDate.ToShortDateString()</td>
                <td>@project.EndDate?.ToShortDateString()</td>
                <td>@project.Priority</td>
                <td>@project.ProjectManager.FirstName</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@project.Id">Детали</a> |
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@project.Id">Редактировать</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@project.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
