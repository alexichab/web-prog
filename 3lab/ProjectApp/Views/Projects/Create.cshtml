@model ProjectApp.Models.Project

@{
    ViewData["Title"] = "Создать проект";
}

<h1>Создать проект</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Название проекта</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerCompany">Компания-заказчик</label>
        <input asp-for="CustomerCompany" class="form-control" />
        <span asp-validation-for="CustomerCompany" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PerformerCompany">Компания-исполнитель</label>
        <input asp-for="PerformerCompany" class="form-control" />
        <span asp-validation-for="PerformerCompany" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Дата начала</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">Дата окончания</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority">Приоритет</label>
        <input asp-for="Priority" type="number" class="form-control" />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectManagerId">Руководитель проекта</label>
        <select asp-for="ProjectManagerId" asp-items="@(ViewData["ProjectManagerId"] as SelectList)" class="form-control"></select>
        <span asp-validation-for="ProjectManagerId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать проект</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Назад к списку проектов</a>

<div>
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p class="text-danger">@error.ErrorMessage</p>
    }
</div>