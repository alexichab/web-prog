@model ProjectApp.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<h1>проекта: @Model.Name</h1>

<div>
    <h4></h4>
    <dl class="row">
        <dt class="col-sm-2">Компания-заказчик</dt>
        <dd class="col-sm-10">@Model.CustomerCompany</dd>

        <dt class="col-sm-2">Компания-исполнитель</dt>
        <dd class="col-sm-10">@Model.PerformerCompany</dd>

        <dt class="col-sm-2">Дата начала:</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Дата окончания:</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToShortDateString()</dd>

        <dt class="col-sm-2">Приоритет:</dt>
        <dd class="col-sm-10">@Model.Priority</dd>

        <dt class="col-sm-2">Руководитель проекта</dt>
        <dd class="col-sm-10">@Model.ProjectManager.FirstName @Model.ProjectManager.LastName</dd>
    </dl>

    <h4>Сотрудники на проекте:</h4>
    <ul>
    @if (Model.Employees != null && Model.Employees.Any())
    {
        foreach (var employee in Model.Employees)
        {
            <li>@employee.FirstName @employee.LastName</li>
        }
    }
    else
    {
        <li>Сотрудников нет.</li>
    }
</ul>

</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Редактировать проект</a>
    <a asp-action="AddEmployee" asp-route-id="@Model.Id" class="btn btn-primary">Добавить/удалить сотрудника</a>
</p>
