<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectApp.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Верхний навигационный бар -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-project-diagram me-2"></i> ProjectApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Employees" asp-action="Index">
                                <i class="fas fa-users me-1"></i> Сотрудники
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Projects" asp-action="Index">
                                <i class="fas fa-clipboard-list me-1"></i> Проекты
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Tasks" asp-action="Index">
                                <i class="fas fa-tasks me-1"></i> Задачи
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-user-shield me-1"></i> Конфиденциальность
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Основное содержимое -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Футер -->
    <footer class="bg-dark text-light py-4 mt-4">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; АЙЙЙЙЙЙ</span>
            <ul class="list-unstyled d-flex mb-0">
                <li class="ms-3">
                    <a class="text-light" href="https://github.com" target="_blank" title="GitHub">
                        <i class="fab fa-github fa-lg"></i>
                    </a>
                </li>
                <li class="ms-3">
                    <a class="text-light" href="https://linkedin.com" target="_blank" title="LinkedIn">
                        <i class="fab fa-linkedin fa-lg"></i>
                    </a>
                </li>
                <li class="ms-3">
                    <a class="text-light" href="mailto:support@projectapp.com" title="Связаться с нами">
                        <i class="fas fa-envelope fa-lg"></i>
                    </a>
                </li>
            </ul>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
